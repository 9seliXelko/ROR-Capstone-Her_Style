<%= form_with(model: article, local: true) do |f| %>

    <%= render "shared/errors", object: article %>    


    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :text %>
    <%= f.text_area :text %><br>

    <%= f.label :created_at %>
    <%= f.date_field :createdat %><br>

    <%= f.label :main_image %>
    <%= f.file_field :main_image %><br>

    <%= f.submit "Create Article" %>



<% end %>