<%= form_with(model: category, local: true) do |form| %>

    <%= render "shared/errors", object: category %>

    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true %>

    <%= form.label :priority %>    
    <%= form.select(:priority, [["High", 1], ["Medium", 2], ["Low", 3]]) %>

    <%= form.submit %>
<% end %>